<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>
  <!-- context -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <!-- dispatcher -->
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/dispatcherConfig.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/books/*</url-pattern>
  </servlet-mapping>
  <servlet>
        <servlet-name>BookRegistrationServlet</servlet-name>
        <servlet-class>com.lab.exam.BookRegistrationServlet</servlet-class>
    </servlet>


    <!-- Servlet for Task Deletion -->
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>com.lab.exam.DeleteBookServlet</servlet-class>
    </servlet>


    <!-- Servlet for Displaying Tasks -->
    <servlet>
        <servlet-name>DisplayBooksServlet</servlet-name>
        <servlet-class>com.lab.exam.DisplayBooksServlet</servlet-class>
    </servlet>

</web-app>
